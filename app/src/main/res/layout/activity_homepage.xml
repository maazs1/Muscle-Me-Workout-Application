<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gradStart">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/gradStart"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/settings_vector" />

        <TextView
            android:id="@+id/homePageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settingsButton"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"
            android:text="maaz"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp" />




        <ImageView
            android:id="@+id/homePageImg"
            android:layout_below="@+id/homePageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/male_physique_first"

        />

        <LinearLayout
            android:id="@+id/LH1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homePageImg"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <LinearLayout
                android:id="@+id/homePageLinearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="@string/gW"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/goal_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="21sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gF"
                    android:textColor="#FFFFFFFF"
                    android:textSize="22sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/goal_fat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="21sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gM"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="22sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/goal_muscle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="21sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/homePageLinearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="@string/cW"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp"  />

                <TextView
                    android:id="@+id/current_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="21sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cF"
                    android:textColor="#FFFFFFFF"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/current_fat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="21sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cM"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="22sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/current_muscle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="21sp"
                    />

            </LinearLayout>



        </LinearLayout>



        <TextView
            android:id="@+id/CalendarName"
            android:layout_below="@+id/LH1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="10dp"
            android:text="Workout Schedule"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"/>

        <com.applandeo.materialcalendarview.CalendarView
            android:layout_marginTop="10dp"
            android:id="@+id/calendarView"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/CalendarName"
            android:layout_marginBottom="20dp"
            app:headerColor="#4C4C4C"
            app:headerLabelColor="@color/blue"
            app:abbreviationsBarColor="#4C4C4C"
            app:abbreviationsLabelsColor ="@color/blue"
            app:pagesColor="#4C4C4C"
            app:selectionColor="@color/blue"
            app:selectionLabelColor="@color/blue"
            app:daysLabelsColor="@color/blue"
            app:highlightedDaysLabelsColor="@color/blue"
            app:anotherMonthsDaysLabelsColor="@color/red" />



    </RelativeLayout>

</ScrollView>
